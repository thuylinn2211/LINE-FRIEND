<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_GioHang"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableRow android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imvBack"
                    android:layout_width="42dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    />

                <TextView
                    android:id="@+id/txtGiohang"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:text="Giỏ hàng"
                    android:textSize="25dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/imvSearch"
                    android:layout_width="76dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_search_24"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imvButbi"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/butbihinhtraitim"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtButbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bút bi hình trái tim"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫50.000"
                    android:textSize="15dp"
                    android:textColor="#6ADE8B"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm ₫10.000"
                    android:textColor="#A7A7A7"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnGiam1"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="-"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textColor="#A7A7A7"/>
                <TextView
                    android:id="@+id/txtSoluong1"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    />
                <Button
                    android:id="@+id/btnTang1"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textColor="#A7A7A7"/>
                <Button
                    android:id="@+id/btnXoa1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#C4C4C4"
                    android:text="Xóa"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A7A7A7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvGiadodt"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/giadodt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtGiadodt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá đỡ điện thoại Thỏ Cony"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫50.000"
                    android:textSize="15dp"
                    android:textColor="#6ADE8B"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm ₫10.000"
                    android:textColor="#A7A7A7"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnGiam2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="-"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textColor="#A7A7A7"/>
                <TextView
                    android:id="@+id/txtSoluong2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    />
                <Button
                    android:id="@+id/btnTang2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textColor="#A7A7A7"/>
                <Button
                    android:id="@+id/btnXoa2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#C4C4C4"
                    android:text="Xóa"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A7A7A7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvMockhoa"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/mockhoatho"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtMockhoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Móc khóa hình Thỏ Cony"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫50.000"
                    android:textSize="15dp"
                    android:textColor="#6ADE8B"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm ₫10.000"
                    android:textColor="#A7A7A7"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnGiam3"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="-"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textColor="#A7A7A7"/>
                <TextView
                    android:id="@+id/txtSoluong3"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="1"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    />
                <Button
                    android:id="@+id/btnTang3"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:textColor="#A7A7A7"/>
                <Button
                    android:id="@+id/btnXoa3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#C4C4C4"
                    android:text="Xóa"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#A7A7A7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>