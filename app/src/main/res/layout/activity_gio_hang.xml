<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_GioHang"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="9">

            <TableRow android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imvBack"

                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtGioHang"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Giỏ hàng"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:id="@+id/imvSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_search_24"
                    android:layout_weight="3"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imvPhoto"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/butbihinhtraitim" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtTenSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bút bi hình trái tim"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/txtGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:id="@+id/txtGiamGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảm 10000"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:paddingLeft="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5">
                            <Button
                                android:id="@+id/btnGiam1"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:text="-"
                                android:textColor="#A7A7A7"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtSoLuong1"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="25dp"
                                android:paddingTop="15dp"
                                android:text="1" />

                            <Button
                                android:id="@+id/btnTang1"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:text="+"
                                android:textColor="#A7A7A7"
                                android:textSize="20sp" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/btnXoa1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="#C4C4C4"
                            android:padding="2dp"
                            android:text="Xóa"
                            android:textColor="#A7A7A7"
                            android:textSize="15sp"
                            android:layout_weight="5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imvGiadodt"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/giadodt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtGiaDoDt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giá đỡ điện thoại Thỏ Cony"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảm:"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A7A7A7"
                            android:text="@string/đ"
                            android:layout_marginLeft="8dp"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.000"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5">
                            <Button
                                android:id="@+id/btnGiam2"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:text="-"
                                android:textColor="#A7A7A7"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtSoLuong2"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="25dp"
                                android:paddingTop="15dp"
                                android:text="1" />

                            <Button
                                android:id="@+id/btnTang2"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:text="+"
                                android:textColor="#A7A7A7"
                                android:textSize="20sp" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/btnXoa2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="#C4C4C4"
                            android:padding="2dp"
                            android:text="Xóa"
                            android:textColor="#A7A7A7"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imvMocKhoaHinhTho"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/mockhoatho" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtMocKhoaHinhTho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Móc khóa hình Thỏ Cony"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảm:"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A7A7A7"
                            android:text="@string/đ"
                            android:layout_marginLeft="8dp"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.000"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5">
                            <Button
                                android:id="@+id/btnGiam3"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:text="-"
                                android:textColor="#A7A7A7"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/txtSoLuong3"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="25dp"
                                android:paddingTop="15dp"
                                android:text="1" />

                            <Button
                                android:id="@+id/btnTang3"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/white"
                                android:padding="2dp"
                                android:text="+"
                                android:textColor="#A7A7A7"
                                android:textSize="20sp" />
                        </LinearLayout>



                        <Button
                            android:id="@+id/btnXoa3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#C4C4C4"
                            android:text="Xóa"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:textColor="#A7A7A7"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Tổng số tiền:"
                    android:textSize="16sp"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/đ"
                        android:textColor="#FA3E3E"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150.000"
                        android:textColor="#FA3E3E"
                        android:textSize="20sp"
                        android:layout_marginLeft="2dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Bạn tiết kiệm được"
                    android:textColor="#6ADE8B"
                    android:textSize="15sp"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.000"
                        android:textColor="#FA0000"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="2dp"
                        android:text="@string/đ"
                        android:textColor="#FA3E3E"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Lưu ý cho người bán" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÔI ĐỒNG Ý CÁC ĐIỀU KHOẢN, ĐIỀU KIỆN VÀ CHÍNH SÁCH BẢO MẬT"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="XIN LƯU Ý:"
                android:textColor="#000000"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:text="* Để quá trình nhanh hơn, vui lòng kiểm tra kỹ địa chỉ giao hàng của bạn."
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:text="* Chúng tôi không chịu trách nhiệm cho việc vận chuyển chậm trễ do địa chỉ giao hàng không hợp lệ."
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnMuaHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00D665"
                android:text="Mua hàng"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>