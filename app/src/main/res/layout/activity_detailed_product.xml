<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_DetailedProduct"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/gaubong"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thú nhồi bông gấu Brown"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="(2,2k)"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="7,9k đã bán"/>

                <ImageButton
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/ic_baseline_share_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#34C759"
                    android:text="@string/đ"
                    android:layout_marginLeft="1dp"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000"
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#34C759"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm:"
                    android:textColor="#8C8C8C"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8C8C8C"
                    android:text="@string/đ"
                    android:layout_marginLeft="8dp"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.000"
                    android:textColor="#8C8C8C"
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Phân loại"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="145dp"
                    android:text="Số lượng"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spPhanLoai"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/spPhanLoai"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/custom_vien"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Button
                        android:id="@+id/btnGiam"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/white"
                        android:padding="2dp"
                        android:text="-"
                        android:textColor="#A7A7A7"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtSoLuong"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:text="1" />

                    <Button
                        android:id="@+id/btnTang"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/white"
                        android:padding="2dp"
                        android:text="+"
                        android:textColor="#A7A7A7"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btnAddProduct"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Thêm sản phẩm"
                    android:backgroundTint="#999999"/>
                <Button
                    android:id="@+id/btnBuy"
                    android:layout_marginLeft="15dp"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Mua ngay"
                    android:backgroundTint="#00D665"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAddLikedProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D999999"
                android:text="Thêm vào mục yêu thích"
                android:textColor="#00D665" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCD6D6"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Chi tiết sản phẩm"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Danh mục"
                            android:textColor="#B5B5B5"
                            android:gravity="center"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Thú nhồi bông"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Thương hiệu"
                            android:textColor="#B5B5B5"
                            android:gravity="center"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Line Friends"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Kho hàng"
                            android:textColor="#B5B5B5"
                            android:gravity="center"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="500"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Gửi từ"
                            android:textColor="#B5B5B5"
                            android:gravity="center"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Quận 5, TP.HCM"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCD6D6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá sản phẩm"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9/5"
                        android:textColor="#13A7FA"
                        android:layout_marginRight="15dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:backgroundTint="#08B5B5B5"
                        android:text="Xem thêm"
                        android:textColor="#13A7FA"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D******g"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đóng gói siêu cẩn thận. Đầy đủ thông tin; mình rất thích sản phẩm này"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="97dp"
                        android:layout_height="110dp"
                        android:src="@drawable/hinhfeedback1"/>

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="97dp"
                        android:layout_height="110dp"
                        android:src="@drawable/hinhfeedback2"/>

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="97dp"
                        android:layout_height="110dp"
                        android:src="@drawable/hinhfeedback3"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DCD6D6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Các sản phẩm khác"
                                android:textColor="@color/black"
                                android:textSize="16sp"/>

                            <Button
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#0AB5B5B5"
                                android:text="Xem thêm"
                                android:textColor="#13A7FA"
                                android:textSize="14sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="130dp"
                                    android:src="@drawable/mockhoavitvang"/>

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="wrap_content"
                                    android:text="Móc khóa hình vịt vàng"
                                    android:textSize="14sp"/>

                                <LinearLayout
                                    android:layout_width="140dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/đ"
                                                android:textColor="#6ADE8B"
                                                android:textSize="14sp"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="50000"
                                                android:textColor="#6ADE8B"
                                                android:textSize="14sp"/>
                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/giảm"
                                            android:textSize="12sp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/imvLike"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/whiteheart"/>

                                        <ImageView
                                            android:id="@+id/imvCart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:src="@drawable/cartitem"/>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="130dp"
                                    android:src="@drawable/gaubonghinhtraitim"/>

                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="wrap_content"
                                    android:text="Thú nhồi bông hình trái tim"
                                    android:textSize="14sp"/>

                                <LinearLayout
                                    android:layout_width="140dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/đ"
                                                android:textColor="#6ADE8B"
                                                android:textSize="14sp"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="50000"
                                                android:textColor="#6ADE8B"
                                                android:textSize="14sp"/>
                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/giảm"
                                            android:textSize="12sp"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/imvLike2"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/whiteheart"/>

                                        <ImageView
                                            android:id="@+id/imvCart2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:src="@drawable/cartitem"/>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btnBackHome"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:src="@drawable/itemhome"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trang chủ"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btnLike"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:src="@drawable/heart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yêu thích"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btnCart"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:src="@drawable/cartitem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua sắm"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:src="@drawable/searchitem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm kiếm"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/btnAccount"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:src="@drawable/login"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản"
                        android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>