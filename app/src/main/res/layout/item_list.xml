<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvHinh"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/txtTenSanPham"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Giá đỡ điện thoại Thỏ Cony"
            android:textColor="#272727"
            android:textSize="16sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TableRow
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9"
                    android:text="50.000"
                    android:textColor="#6ADE8B"
                    android:textSize="20sp"/>

<!--                <ImageView-->
<!--                    android:id="@+id/imvYeuThich"-->
<!--                    android:layout_width="35dp"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_weight="0.5"-->
<!--                    android:src="@drawable/icon_traitim"/>-->

<!--                <ImageView-->
<!--                    android:id="@+id/imvGioHang"-->
<!--                    android:layout_width="35dp"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_weight="0.5"-->
<!--                    android:src="@drawable/icon_giohang"/>-->
            </TableRow>

            <TextView
                android:id="@+id/txtGiamGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm ₫10.000"
                android:textColor="#A7A7A7"
                android:textSize="15sp" />
        </TableLayout>
    </LinearLayout>

</LinearLayout>