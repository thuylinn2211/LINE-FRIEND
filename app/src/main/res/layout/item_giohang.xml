<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <CheckBox
            android:id="@+id/chkSanPham"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imvHinh"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@drawable/butbihinhtraitim" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtTenSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bút bi hình trái tim"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="50.000"
                    android:textColor="#6ADE8B"
                    android:textSize="22dp" />
                <TextView
                    android:id="@+id/txtGiamGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm 10000"
                    android:textColor="#A7A7A7"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                    <Button
                        android:id="@+id/btnGiam"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/white"
                        android:padding="2dp"
                        android:text="-"
                        android:textColor="#A7A7A7"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtSoLuong"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:text="1" />

                    <Button
                        android:id="@+id/btnTang"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/white"
                        android:padding="2dp"
                        android:text="+"
                        android:textColor="#A7A7A7"
                        android:textSize="20sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnXoa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="#C4C4C4"
                    android:padding="2dp"
                    android:text="Xóa"
                    android:textColor="#A7A7A7"
                    android:textSize="15sp"
                    android:layout_weight="5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>