<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_ChoXacNhan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

                <ImageView
                    android:id="@+id/imvBack"
                    android:layout_width="42dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_arrow_back_24" />
                <TextView
                    android:id="@+id/txtDonHang"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:text="Đơn hàng"
                    android:textSize="25dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/imvSearch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_search_24"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:id="@+id/txtChoXacNhan"
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:text="Chờ xác nhận"
                                android:textColor="#FF0000"
                                android:textSize="21sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtChoLayHang"
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="Chờ lấy hàng"
                                android:textColor="@color/black"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/txtDangGiao"
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="Đang giao"
                                android:textColor="@color/black"
                                android:textSize="21sp"/>
                            <TextView
                                android:id="@+id/txtDaGiao"
                                android:layout_width="130dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="Đã giao"
                                android:textColor="@color/black"
                                android:textSize="21sp"/>
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Chờ thanh toán"
                        android:textColor="@color/teal_700"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="right"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imvButbi"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@drawable/butbihinhtraitim"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtButbi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bút bi hình trái tim"
                            android:textSize="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₫50.000"
                                android:textSize="15dp"
                                android:textColor="#6ADE8B"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giảm ₫10.000"
                                android:textColor="#A7A7A7"
                                android:textSize="15dp"
                                android:paddingLeft="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng: "/>
                            <TextView
                                android:id="@+id/txtSoLuong1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imvGiadodt"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@drawable/giadodt"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtGiadodt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá đỡ điện thoại Thỏ Cony"
                            android:textSize="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₫50.000"
                                android:textSize="15dp"
                                android:textColor="#6ADE8B"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giảm ₫10.000"
                                android:textColor="#A7A7A7"
                                android:textSize="15dp"
                                android:paddingLeft="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng: "/>
                            <TextView
                                android:id="@+id/txtSoLuong2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imvMockhoa"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@drawable/mockhoatho"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtMockhoa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Móc khóa hình Thỏ Cony"
                            android:textSize="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₫50.000"
                                android:textSize="15dp"
                                android:textColor="#6ADE8B"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giảm ₫10.000"
                                android:textColor="#A7A7A7"
                                android:textSize="15dp"
                                android:paddingLeft="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng: "/>
                            <TextView
                                android:id="@+id/txtSoLuong3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>