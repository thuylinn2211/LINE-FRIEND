<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_DanhGiaSanPham"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="10">
        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="6.5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Đánh giá sản phẩm"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDang"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:backgroundTint="#00D665"
            android:text="Đăng"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imvButBi"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/butbihinhtraitim" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtButBi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bút bi hình trái tim"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảm:"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:paddingLeft="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A7A7A7"
                            android:text="@string/đ"
                            android:layout_marginLeft="8dp"
                            android:textSize="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.000"
                            android:textColor="#A7A7A7"
                            android:textSize="15dp"
                            android:layout_marginLeft="2dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số lượng: 1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/saodanhgia"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="10">
                <LinearLayout
                    android:id="@+id/btnCamera1"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/custom_vien">

                    <LinearLayout
                        android:id="@+id/btnCamera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:paddingTop="4dp"
                            android:src="@drawable/ic_baseline_camera_alt_24"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thêm hình ảnh"
                            android:gravity="center_horizontal"
                            android:textSize="13dp"
                            android:paddingBottom="2dp"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnVideo"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/custom_vien">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:paddingTop="4dp"
                            android:src="@drawable/icon_quayphimdanhgia"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thêm Video"
                            android:gravity="center_horizontal"
                            android:textSize="13dp"
                            android:paddingBottom="2dp"
                            android:textColor="#FF0000"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/imvHinhDanhia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
                <EditText
                    android:id="@+id/edtDanhGia"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:layout_height="160dp"
                    android:layout_weight="6"
                    android:background="#DDDCDC"
                    android:textColorHint="@color/black"
                    android:gravity="top"
                    android:hint="Hãy chia sẻ cảm nhận của bạn về sản phẩm này nhé."
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>