<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_DiaChi"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imvBack"
                    android:layout_width="42dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/txtDiaChi"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Địa chỉ"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="An Nguyễn"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:src="@drawable/icon_line"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="0963589562"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="95dp"
                    android:src="@drawable/icon_chinhsua"/>
            </TableRow>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Thôn 18, xã Ea Ktur, huyện Cư Kuin, tỉnh Đắk Lắk"
                    android:textSize="17sp"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:orientation="horizontal">
                <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_flag"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="#13A7FA"
                    android:text="Địa chỉ mặc định"/>
            </LinearLayout>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="An Nguyễn"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:src="@drawable/icon_line"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="0963589562"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/icon_thungrac"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_chinhsua"/>
            </TableRow>

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Thôn 18, xã Ea Ktur, huyện Cư Kuin, tỉnh Đắk Lắk"
                android:textSize="17sp"/>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="400dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Thêm địa chỉ mới"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTintMode="screen"
            android:backgroundTint="#34C759"/>
    </LinearLayout>

</LinearLayout>