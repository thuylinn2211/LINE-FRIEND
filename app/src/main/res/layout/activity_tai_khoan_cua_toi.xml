<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_TaiKhoanCuaToi"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imvBack"
                    android:layout_width="42dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/txtTaiKhoanCuaToi"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Tài khoản của tôi"
                    android:textColor="@color/black"
                    android:textSize="25dp"/>

                <ImageView
                    android:id="@+id/imvSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_settings_24" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/hinhkhachhang3"
        android:layout_gravity="center_vertical"
        android:paddingTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An Nguyễn"
        android:textSize="25sp"
        android:paddingTop="10dp"
        android:textColor="#272727"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="80dp"
            android:text="Thông tin tài khoản"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imvSua"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:src="@drawable/icon_chinhsua"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:paddingTop="10dp">
        <TableRow>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên:"
            android:textSize="18sp"
            android:textColor="#272727"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An Nguyễn"
                android:textSize="18sp"
                android:textColor="#272727"
                android:layout_marginLeft="60dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="18sp"
                android:textColor="#272727"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="***123@gmail.com"
                android:textSize="18sp"
                android:textColor="#272727"
                android:layout_marginLeft="60dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điện thoại:"
                android:textSize="18sp"
                android:textColor="#272727"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****976"
                android:textSize="18sp"
                android:textColor="#272727"
                android:layout_marginLeft="60dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textSize="18sp"
                android:textColor="#272727"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="18sp"
                android:textColor="#272727"
                android:layout_marginLeft="60dp"/>
        </TableRow>

        <TableRow
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh:"
                android:textSize="18sp"
                android:textColor="#272727"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/05/2001"
                android:textSize="18sp"
                android:textColor="#272727"
                android:layout_marginLeft="60dp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="160dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Đổi Mật Khẩu"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTintMode="screen"
            android:backgroundTint="#00D665"/>

    </LinearLayout>

</LinearLayout>