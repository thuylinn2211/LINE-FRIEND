<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_arrow_back_24" />
            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textSize="25dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="8dp">

                        <ImageView
                            android:id="@+id/imvGioHang"
                            android:layout_width="25dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_giohang"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Hiển thị thông tin đơn hàng"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imvDown"
                            android:layout_width="25dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"/>

                        <TextView
                            android:id="@+id/txtSumGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150.000"
                            android:layout_marginLeft="40dp"
                            android:textColor="#FF0000"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0000"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:id="@+id/imvButbi"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:src="@drawable/butbihinhtraitim"/>

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/txtButBi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bút bi hình trái tim"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="x"/>
                            <TextView
                                android:id="@+id/txtSoLuong1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="10sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imvGiaDodt"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:src="@drawable/giadodt"/>
                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/txtGiadodt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá đỡ điện thoại Thỏ Cony"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="x"/>
                            <TextView
                                android:id="@+id/txtSoLuong2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="10sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <ImageView
                        android:id="@+id/imvMockhoa"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:src="@drawable/mockhoatho"/>

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/txtMockhoa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Móc khóa hình Thỏ Cony"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="x"/>
                            <TextView
                                android:id="@+id/txtSoLuong3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000"
                            android:textSize="10sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#6ADE8B"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6ADE8B"
                            android:text="@string/đ"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <EditText
                        android:id="@+id/txtVoucher"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_vien"
                        android:text="Nhập Voucher áp dụng"
                        android:textSize="16dp"
                        android:padding="8dp"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/next"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="25dp"
                            android:text="Tạm tính"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/txtTamTinh"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="150000"
                            android:textColor="#000000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textColor="#000000"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="25dp"
                            android:text="Vận chuyển"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/txtVanChuyen"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="8dp"
                            android:text="30000"
                            android:textColor="#000000"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textColor="#000000"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="260dp"
                            android:layout_height="25dp"
                            android:text="Tổng cộng"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="VND"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/txtTong"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="8dp"
                            android:text="180000"
                            android:textColor="#000000"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:textColor="#000000"
                            android:text="@string/đ"
                            android:layout_marginLeft="1dp"
                            android:textSize="18dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Giỏ hàng"
                            android:textColor="#FF0000"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Thông tin"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Vận chuyển"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="Thanh toán"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_call_24"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:layout_height="50dp"
                            android:text="Thông tin liên hệ"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="120dp"
                            android:src="@drawable/hinhkhachhang1"/>
                        <LinearLayout
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phạm Thị Thùy Linh"
                                android:textSize="14dp"
                                android:padding="4sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(+84) 822 393 545"
                                android:textSize="14dp"
                                android:padding="4sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="linhptt19411c@st.uel.edu.vn"
                                android:textSize="14dp"
                                android:padding="4sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imvSua1"
                            android:layout_width="30dp"
                            android:layout_height="120dp"
                            android:src="@drawable/icon_chinhsua"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/chkThongTin"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="Nhận các thông tin mới nhất về sản phẩm và ưu đãi dành cho riêng bạn"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:paddingRight="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/local"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:layout_height="50dp"
                            android:text="Địa chỉ nhận hàng"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical">
                            <CheckBox
                                android:id="@+id/chkDiaChi1"
                                android:layout_width="30dp"
                                android:layout_height="50dp"/>
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="thôn 18, xã Ea Ktur, huyện Cư Kuin, tỉnh Đắk Lắk"
                                android:textSize="12dp"
                                android:padding="4sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:id="@+id/imvSua2"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_chinhsua"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingStart="4dp"
                            android:gravity="center_vertical">
                            <CheckBox
                                android:id="@+id/chkDiaChi2"
                                android:layout_width="30dp"
                                android:layout_height="50dp"/>
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="KTX Khu B ĐHQG, TP.HCM"
                                android:textSize="14dp"
                                android:padding="4sp"
                                android:textColor="@color/black"/>
                            <ImageView
                                android:id="@+id/imvSua3"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:src="@drawable/icon_chinhsua"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_margin="16dp"
                    android:background="@drawable/custom_vien"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/ic_baseline_add_circle_24" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Thêm mới địa chỉ"
                        android:textColor="#FF0000"
                        android:gravity="left"
                        android:backgroundTint="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imvBack2"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_arrow_back_24" />
                    <TextView
                        android:id="@+id/txtQuayLaiGioHang"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Quay lại giỏ hàng"
                        android:textSize="14dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center" />
                    <Button
                        android:id="@+id/btnHinhThucVanChuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hình thức vận chuyển"
                        android:backgroundTint="#34C759"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>